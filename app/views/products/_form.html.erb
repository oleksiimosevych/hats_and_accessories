<%=simple_form_for(@product) do |f| %>
  <%= f.error_notification%>
  <%=f.input :name %>
  <%=f.input :about, as: :text %>
  <%=f.input :price %>
  <%=f.input :goods_group_id, collection: @goods_groups %>
  <%=f.input :gender_id, collection: @genders %>
  <%=f.input :the_best_of_week, as: :radio_buttons %>
  <%=f.submit 'Save' %>
<% end %>