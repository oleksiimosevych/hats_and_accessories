<h1>Усі групи товарів <%= link_to 'Додати нову групу', new_goods_group_path %></h1>
  <% @goods_groups.each do |goods_group| %>
<div class="col-xs-6 col-lg-4">
  <h3><%=goods_group.group_name %></h3>
    <%= link_to 'Редагувати', edit_goods_group_path(goods_group) %>
    <%= link_to 'Знищити запис', goods_group_path(goods_group), method: :delete, data: {confirm: 'Роксолано, ви впевнені, що бажаєте знищити цю групу товарів?'} %>
</div><!--/.col-xs-6.col-lg-4-->
<% end %>
              	