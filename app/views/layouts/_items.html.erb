<div class="row row-padded row-bordered row-centered">
    <div class="col-sm-12">
      <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3 m-b-lg">
          <div class="panel panel-default panel-profile m-b-0 ">
            <div class="panel-heading">
               	<p class="text-center productname"><%=product.name %></p>
            </div>
            <div class="panel-body text-center stable_position ">
              <%= image_tag(product.image_url, class: "cap_img img-rounded") %>
              <p class="m-b"> <b><%=product.price%></b> грн.
              	<br>
                <p><small>
                  <% if product.avaible %>
                      <span class='green'>В наявності</span>
                  <% else%>
                      <span class='red'>Нема в наявності</span>
                  <%end%>
                  <br>
                  <% if product.wholesale %>
                      Тільки оптом
                  <% else%>
                      Доступно вроздріб
                  <% end %>
                </small></p>


              	<%= link_to "Детальніше...", product_path(product) , class: 'btn btn-primary-outline btn-sm m-b'%>
              </p>
            </div>
          </div>
        </div>
	  <% end %>
     </div>
    </div>
  </div>
